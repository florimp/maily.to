{
  "name": "@florimp/shared",
  "version": "1.0.0",
  "private": false,
  "description": "Shared utilities for Maily",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "tsdown --watch",
    "clean": "rm -rf dist",
    "build": "tsdown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/florimp/maily.to.git",
    "directory": "packages/shared"
  },
  "author": "Arik Chakma <arikchangma@gmail.com>",
  "keywords": [
    "maily.to",
    "react",
    "email"
  ],
  "devDependencies": {
    "tsconfig": "workspace:*",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "csstype": "^3.1.3",
    "zod": "^3.24.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  }
}
